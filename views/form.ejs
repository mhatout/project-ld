<!--start of input-user div-->
<div id="input-user-div" class="<%=user_input_visibility%>">
<div class="main-con container">
<form action="/add-user" method="post">
  <div class="form-group">
    <label for="username_input">Username</label>
    <input type="username" class="form-control" name="user[username]" id="username_input" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="password_input">Password</label>
    <input type="password" class="form-control" name="user[password]" id="password_input" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-dark"><i class="fa fa-user-plus" aria-hidden="true"></i> Add User</button>
</form>
</div>
</div>
<!--end of input-user div-->

<!--start of input-vessel div-->
<div id="input-vessel-div" class="<%=vessel_input_visibility%>">
<div class="main-con container">
<form action="/add-vessel" method="post">
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="vessel-name-input">Vessle Name</label>
      <input type="text" class="form-control" name="vessel[name]" id="vessel-name-input" placeholder="Vessle Name"required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="op-no-input">Op No</label>
      <input type="text" class="form-control" name="vessel[operation]" id="op-no-input" placeholder="Op No" required>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="supervisor">Supervisor</label>
      <input type="text" class="form-control" name="vessel[supervisor]" id="supervisor" placeholder="Supervisor" required>
    </div>
    <div class="col-md-3 mb-3">
      <label for="purchaser">Purchaser</label>
      <input type="text" class="form-control" name="vessel[purchaser]" id="purchaser" placeholder="Purchaser" required>
    </div>
    <div class="col-md-3 mb-3">
      <label for="eta">ETA</label>
      <input type="text" class="form-control" name="vessel[eta]" id="eta" placeholder="ETA" required>
    </div>
  </div>
  <button class="btn btn-dark" type="submit"><i class="fa fa-ship" aria-hidden="true"></i> Add Vessel</button>
</form>
</div>
</div>
<!--end of input-vessel div-->
