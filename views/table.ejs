<% include partials/header%>

<!--start of navbar-->
  <nav id ="navbar" class="navbar fixed-top navbar-dark bg-dark">
  <div class="container">
  <a class="navbar-brand" >
    <img id="navbar-icon" class="hide" src="images/mov_LuckyDolphin_Logo.png" width="90" height="50"  alt="">
  </a>
  <button id="addbtn" type="button" class="btn btn-sm align-right btn-outline-secondary disabled"><i class="fa fa-plus" aria-hidden="true"></i> Add</button>
  </div>
  </nav> 
  <!--end of navbar-->
  
<!--start of content div-->
  <div id="content-div">
   <div class="main-con container">
     <form class="form-inline my-2 my-lg-0" action ="/find" method="post">
      <input id="search-input" name ="searchinput" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
     </form>
        <table id="main-table" class="table table-hover">
       <thead>
         <tr>
           <th scope="col">#</th>
           <th scope="col">Vessle Name</th>
           <th scope="col">Op No</th>
           <th scope="col">Status</th>
         </tr>
       </thead>
       <tbody>
       <% for(var i=0 ; i<vessels.length; i++){%>
        <tr data-toggle="collapse" data-target="#hidden-row<%=i+1%>" class="accordion-toggle">
         <th scope="row"><%=i+1%></th>
         <td><%= vessels[i].name; %></td>
         <td><%= vessels[i].number;%></td>
         <td><%= vessels[i].status;%></td>
        </tr>
        <tr>
            <td colspan="6" class="hiddenRow"><div id = "hidden-row<%=i+1%>" class="accordian-body collapse">Demo1</div></td>
        </tr>
       <% } %>
       </tbody>
    </table>
   </div>
  </div>
  <!--end of content div-->
  
  <div id="snackbar" class="hide">Some text some message..</div>
  
